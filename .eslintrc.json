{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": ["tools/"],
  "rules": {
    "no-unused-vars": "warn",
    "no-constant-condition": "warn", 
    "no-undef": "warn",
    "no-unreachable": "warn"
  }
}
